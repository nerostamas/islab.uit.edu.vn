{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<div class="row">

    {{! Each post will be output using this markup }}
    {{#post}}
        <div class="col-md-12">
            {{! The big featured header on the homepage, with the site logo and description }}
            <header class="site-head page-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
                <div class="vertical">
                    <div class="menu btn-group text-left">
                        <a class="btn btn-menu btn-xs" href="{{@blog.url}}">
                            <i class="fa fa-home"></i>
                        </a>

                        <button type="button" class="btn btn-menu btn-xs dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bars"></i>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            {{> menu}}
                        </ul>
                    </div>
                    <div class="site-head-content inner">
                        {{#if @blog.logo}}<a href="{{@blog.url}}"><div class="blog-logo" {{#if @blog.logo}}style="background-image: url({{@blog.logo}})"{{/if}}></div></a>{{/if}}
                        <h1 class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
                        <h2 class="blog-description">{{title}}</h2>
                        {{navigation}}
                    </div>
                </div>
            </header>
        </div>
        <div class="col-md-12">
            {{! The main content area on the homepage }}
            <main class="content" role="main">
                <article class="{{post_class}} post-standalone" data-url="{{url}}" id="post{{id}}">
                    <section class="post-content">
                        <p>{{content}}</p>
                    </section>

                    <footer class="post-footer">                        
                        <section class="comments">
                            <!-- Disable comment for static page -->
                        </section>
                    </footer>
                </article>
            </main>
        </div>
    {{/post}}
</div>